{
  "branches": ["main", { "name": "alpha", "prerelease": true }],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "patch" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": false },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false }
        ]
      }
    ],
    ["@semantic-release/release-notes-generator"],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "gh release download \"v${lastRelease.version}\" -p \"CHANGELOG_FULL.md\" || echo \"No previous changelog found\""
      }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG_FULL.md" }],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "CHANGELOG.md", "label": "Release Changelog" },
          { "path": "CHANGELOG_FULL.md", "label": "Full Changelog" }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm run release:version ${nextRelease.version} && APP_VERSION=${nextRelease.version} pnpm run build && APP_VERSION=${nextRelease.version} pnpm run release:pack"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "rm -f RELEASE_VERSION RELEASE_CHANNEL",
        "successCmd": "echo -n \"${nextRelease.version}\" > RELEASE_VERSION && echo -n \"${nextRelease.channel}\" > RELEASE_CHANNEL"
      }
    ]
  ]
}
